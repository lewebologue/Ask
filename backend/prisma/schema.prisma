generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id                String     @id @default(uuid())
  corporateId       String     @unique
  firstname         String  
  lastname          String  
  username          String     @unique
  company_email     String     @unique
  personnal_email   String?    @unique
  company_phone     String?    @unique
  personnal_phone   String?    @unique
  password          String  
  function          Function
  service           Service[]
  equipment         Equipment[]
  companyCar        Company_Car?
  superAdmin        Boolean   @default(false)
}

model Equipment {
  id                String    @id @default(uuid())
  name              String?
  type              Equipment_type[]
  serialNumber      String
  employee          Employee  @relation(fields: [employeeId], references: [corporateId])
  employeeId        String    @unique
}

model Company_Car {
  id                String    @id @default(uuid())
  brand             String
  model             String
  color             String
  licensePlate      String    @unique
  employee          Employee  @relation(fields: [employeeId], references: [corporateId])
  employeeId        String    @unique
}


enum Role {
  GUEST
  USER
  ADMIN
}

enum Service {
  IT
  HR
  FINANCE
  MARKETING
  SALES
  EXPORT
  CUSTOMER_SERVICE
  ADMINISTRATION
  MANAGEMENT
  WAREHOUSE_MANAGEMENT
  WAREHOUSE_PRODUCTION
}

