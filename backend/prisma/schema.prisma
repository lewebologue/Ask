  HR_MANAGEMENT
  FINANCE_ACCOUNTING
  FINANCE_BILLING
  FINANCE_MANAGEMENT
  MARKETING_COMMUNICATION
  MARKETING
  MARKETING_MANAGEMENT
  SALES
  PRE_SALES
  SALES_MANAGEMENT
  EXPORT
  EXPORT_ACCOUNTING
  EXPORT_MANAGEMENT
  CUSTOMER_SERVICE_EMPLOYEE
  CUSTOMER_SERVICE_MANAGEMENT
  ADMINISTRATION
  ADMINISTRATION_MANAGEMENT
  MANAGEMENT
  WAREHOUSE_MANAGEMENT
  WAREHOUSE_PRODUCTION
}

